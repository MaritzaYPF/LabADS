@model IEnumerable<ADSProject.Models.GrupoViewModel>
@using ADSProject.Utils

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Estudiantes</h3>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-success d-block" asp-action="Form"
                   asp-route-operaciones="@Operaciones.agregar">Agregar Grupo</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idGrupo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idCarrera)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idMateria)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idProfesor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ciclo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Anio)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idGrupo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Carreras.NombresCarrera)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Materias.nombresMateria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Profesores.nombresProfesor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ciclo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Anio)
                            </td>
                            <td>

                                <a class="btn btn-primary" asp-route-idGrupo="@item.idGrupo" asp-action="Form" asp-route-operaciones="@Operaciones.modificar">Modificar</a>
                                <a class="btn btn-warning" asp-route-idGrupo="@item.idGrupo" asp-action="Form" asp-route-operaciones="@Operaciones.leer">Leer</a>
                                <a class="btn btn-danger eliminar" asp-route-idGrupo="@item.idGrupo" asp-action="form" asp-route-operaciones="@Operaciones.eliminar">Eliminar</a>
                                <a class="btn btn-secondary" asp-route-idGrupo="@item.idGrupo" asp-action="Form" asp-controller="AsignacionGrupo">Asignar grupo</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
<h3 class="text-center">Lista vacia.</h3>}
    </div>
</div>

